<?xml version="1.0"?>
<odoo>

    <record id="view_users_form_add_teacher" model="ir.ui.view">
        <field name="name">res.users.form.add_teacher</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='messaging']" position="after">
                <group string="Options" name="options">
                    <field name="teacher"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
