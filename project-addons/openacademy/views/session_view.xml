<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id = "session_form_view">

            <field name="name">course.form.view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <header>
                        <button type="object" name="action_open" string="Open" class="btn-primary" states="preparation"/>
                        <button type="object" name="action_complete" string="Complete" class="btn-primary" states="open"/>
                        <button type="object" name="action_cancel" string="Cancel" states="preparation,open"/>


                        <field name="state" widget="statusbar" statusbar_visible="preparation,open,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name" />
                            <h1><field name="name" /></h1>
                        </div>
                        <group string="General">
                            <field name="professor_id"/>
                            <field name="date"/>
                            <field name="duration"/>
                            <field name="course_id"/>
                            <field name="responsible_id"/>
                            <field name="num_places"/>
                            <field name="ocupation" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group string="Assistants">
                            <field name="partner_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                </tree>

                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.tree.view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="duration"/>
                    <field name="course_id"/>
                    <field name="responsible_id"/>
                    <field name="num_places"/>
                    <field name="ocupation" widget="progressbar"/>
                </tree>
            </field>
        </record>

         <record model="ir.ui.view" id="session_search_view">
            <field name="name">session_search_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first Session
                </p>

            </field>
        </record>

        <menuitem id="sessions_menu" name="Sessions" parent="openacademy_menu"
                  action="session_list_action"/>



    </data>
</odoo>
