<odoo>
    <data>


        <template id="session_report_document">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <h1 t-field="o.course_id.name"></h1>
                            <h2 t-field="o.name"></h2>

                            <div class="row">
                                <div t-if="o.partner_id" class="col-xs-3">
                                    <strong>Teacher</strong>
                                    <p t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Date</strong>
                                    <p t-field="o.date"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Nº places</strong>
                                    <p t-field="o.num_places"/>
                                </div>
                            </div>
                            <t t-set="has_comments" t-value="any([x.comment for x in o.partner_ids])" />
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th t-if="has_comments">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.partner_ids" t-as="partner">
                                        <td><span t-field="partner.name"/></td>
                                        <td t-if="has_comments"><span t-field="partner.comment"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="session_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                        <t t-call="openacademy.session_report_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <report
            id="open_academy_session_report"
            model="openacademy.session"
            string="Session report"
            report_type="qweb-pdf"
            name="openacademy.session_report"
            file="openacademy.session_report"/>

    </data>
</odoo>
